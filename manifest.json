{
    "manifest_version": 3,
    "name": "AI Interview Prep Overlay",
    "version": "1.0.0",
    "description": "Real-time AI interview preparation assistance for job descriptions.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "*://*.linkedin.com/*",
        "*://*.indeed.com/*",
        "*://*.glassdoor.com/*",
        "http://*/*",
        "https://*/*"
    ],
    "action": {
        "default_title": "AI Interview Prep",
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "libs/pdf.min.js",
                "libs/mammoth.browser.min.js",
                "utils.js",
                "ai_service.js",
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "libs/pdf.min.js",
                "libs/pdf.worker.min.js",
                "libs/mammoth.browser.min.js",
                "icons/icon16.png",
                "icons/icon48.png",
                "icons/icon128.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}